<?xml version="1.0"?>
<ruleset name="PE Category Filter">
	<description>WordPress Coding Standards for PE Category Filter</description>
	
	<!-- Files to check -->
	<file>src</file>
	<file>tests</file>
	<file>pe-category-filter.php</file>
	
	<!-- Exclude patterns -->
	<exclude-pattern>/vendor/</exclude-pattern>
	<exclude-pattern>/node_modules/</exclude-pattern>
	<exclude-pattern>/coverage/</exclude-pattern>
	<exclude-pattern>/docs/</exclude-pattern>
	<exclude-pattern>/assets/</exclude-pattern>
	<exclude-pattern>/languages/</exclude-pattern>
	
	<!-- Use WordPress coding standards -->
	<rule ref="WordPress"/>
	
	<!-- Override WordPress tab requirement to use spaces -->
	<rule ref="Generic.WhiteSpace.DisallowSpaceIndent">
		<severity>0</severity>
	</rule>
	
	<!-- Allow spaces for indentation -->
	<rule ref="Generic.WhiteSpace.ScopeIndent">
		<properties>
			<property name="indent" value="4"/>
			<property name="tabIndent" value="false"/>
		</properties>
	</rule>
	
	<!-- Allow modern naming conventions for our Symfony-inspired architecture -->
	<rule ref="WordPress.NamingConventions.ValidFunctionName.MethodNameInvalid">
		<severity>0</severity>
	</rule>
	
	<rule ref="WordPress.NamingConventions.ValidVariableName">
		<severity>0</severity>
	</rule>
	
	<rule ref="WordPress.Files.FileName">
		<severity>0</severity>
	</rule>
	
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<severity>0</severity>
	</rule>
	
	<!-- Custom rules for this project -->
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array" value="PECF"/>
		</properties>
	</rule>
	
	<!-- PHP version compatibility -->
	<config name="testVersion" value="8.3"/>
	
	<!-- Show progress -->
	<arg name="colors"/>
	<arg name="parallel" value="4"/>
	
	<!-- Show sniff codes in all reports -->
	<arg value="s"/>
	
	<!-- Check up to 8 files simultaneously -->
	<arg name="parallel" value="8"/>
</ruleset>