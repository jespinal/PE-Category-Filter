{
  "name": "pavel_espinal/pe-category-filter",
  "description": "Modern WordPress plugin for filtering categories from home page with enterprise-grade architecture, performance optimization, and security enhancements.",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "keywords": ["wordpress", "plugin", "category", "filter", "modern", "performance", "security", "accessibility", "pe-category-filter"],
  "homepage": "https://pavelespinal.com/plugins/pe-category-filter/",
  "support": {
    "issues": "https://github.com/jespinal/PE-Category-Filter/issues",
    "source": "https://github.com/jespinal/PE-Category-Filter"
  },
  "authors": [
    {
      "name": "J. Pavel Espinal",
      "email": "jose@pavelespinal.com",
      "homepage": "https://pavelespinal.com/"
    }
  ],
  "require": {
    "php": ">=8.3",
    "composer/installers": "^2.0"
  },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.8",
        "wp-coding-standards/wpcs": "^3.0",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-strict-rules": "^1.5",
        "yoast/phpunit-polyfills": "^2.0"
    },
  "autoload": {
    "psr-4": {
      "PavelEspinal\\WpPlugins\\PECategoryFilter\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PavelEspinal\\WpPlugins\\PECategoryFilter\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage",
    "phpcs": "phpcs --standard=phpcs.xml",
    "phpcbf": "phpcbf --standard=phpcs.xml",
    "phpstan": "phpstan analyse",
    "quality": [
      "@phpcs",
      "@phpstan"
    ],
    "fix": [
      "@phpcbf"
    ],
    "check-all": [
      "@quality",
      "@test"
    ]
  },
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "sort-packages": true,
    "optimize-autoloader": true
  }
}